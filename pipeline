pipeline{

	agent any
	environment{
		RELEASE='20.4'
		LOG_LEVEL='INFO'
	}
	
	
	stages{
	
	
			stage('Build'){
				agent any
				environment {
					echo "Building release with log level ${LOG_LEVEL}.."
				}
				
				steps{
					echo "Building release ${RELEASE} with log level ${LOG_LEVEL}"
				}
			}
		
			stage('Test'){
				steps{
					echo "Testing. I can see release ${RELEASE}, but not log level ${LOG_LEVEL}..."
				}
			}
	
	
		}

}